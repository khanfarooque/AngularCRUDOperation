
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/angular.min.js"></script>
</head>
<body>
    <div ng-app="Homeapp" ng-controller="HomeController">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    &nbsp;
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3 class="text-center">CRUD Operation in ASP.NET MVC using Angular JS</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    &nbsp;
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-sm-9">
                            <h4>Add Employee</h4>
                        </div>
                        <div class="col-sm-3 text-right">
                            <b>@ViewBag.UserInfo</b>
                            <b style="display:none;">@ViewBag.UserRole</b>
                            @Html.ActionLink("Logout", "Logout")
                        </div>
                    </div>
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    &nbsp;
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">

                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" ng-model="EmployeeModel.empname" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" ng-model="EmployeeModel.empaddress" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>City</label>
                        <input type="text" ng-model="EmployeeModel.empcity" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="button" class="btn btn-success" ng-click="savedata()" value="{{btntext}}" />
                    </div>
                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
                <div class="col-md-6"></div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery-3.0.0.slim.min.js"></script>
    <script src="~/Scripts/DOM.js"></script>
</body>
</html>
