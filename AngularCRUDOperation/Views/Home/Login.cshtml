
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/angular.min.js"></script>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @*<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>*@
</head>
<body ng-app="Homeapp" ng-controller="HomeController">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                &nbsp;
            </div>
            <div class="col-md-6">
                <h2>Login</h2>
                <hr />
                
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Username" ng-model="UserModel.user_id" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" ng-model="UserModel.user_pass" />
                </div>
                <div class="form-group">
                    
                    <button type="button" value="Login" class="btn btn-primary" ng-click="login()">Login</button>
                </div>
                
            </div>
            <div class="col-md-3">
                &nbsp;
            </div>
        </div>
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery-3.0.0.slim.min.js"></script>
    <script src="~/Scripts/DOM.js"></script>
    <script src="~/Scripts/jquery-3.0.0.js"></script>
</body>
</html>
